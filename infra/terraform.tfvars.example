# Cloud Defenders Game - Terraform Variables Example
# Copy this file to terraform.tfvars and update with your actual values

# AWS Configuration
aws_region = "eu-west-2"
aws_profile = "aws-profile" # Recommended use is AWS SSO (IAM Identity Centre) https://docs.aws.amazon.com/res/latest/ug/sso-idc.html#:~:text=and%20Engineering%20Studio.-,Step%201%3A%20Set%20up%20an%20identity%20center,Enabling%20IAM%20Identity%20Center

# Project Configuration
project_name = "cloud-defenders"
environment  = "dev"

# Domain Configuration
domain_name = "your-domain.com"

# Route53 Hosted Zone ID
# This is not sensitive data but should be configured per environment
# You can find this in the AWS Console under Route53 > Hosted zones
hosted_zone_id = "Z1234567890ABC"

# Example values for different environments:
# Development: hosted_zone_id = "Z1234567890ABC"
# Staging:     hosted_zone_id = "Z0987654321XYZ"  
# Production:  hosted_zone_id = "Z1111222233344"