{
  "name": "cloud-defenders-backend",
  "version": "1.0.0",
  "description": "Cloud Defenders - Backend API for score management",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests",
    "lint": "eslint *.js src/**/*.js --fix",
    "lint:check": "eslint *.js src/**/*.js",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "build": "powershell -ExecutionPolicy Bypass -File ../scripts/build-backend.ps1",
    "build:dev": "powershell -ExecutionPolicy Bypass -File ../scripts/build-backend.ps1 -Environment development",
    "deploy": "aws lambda update-function-code --function-name cloud-defenders-score-api --zip-file fileb://../dist/score_api.zip"
  },
  "keywords": [
    "aws",
    "lambda",
    "api",
    "serverless"
  ],
  "author": "Cloud Defenders Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.716.0",
    "@aws-sdk/lib-dynamodb": "^3.716.0"
  },
  "devDependencies": {
    "jest": "^30.0.0",
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0"
  }
}
