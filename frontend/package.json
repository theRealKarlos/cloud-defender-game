{
  "name": "cloud-defenders-game",
  "version": "1.0.0",
  "description": "Cloud Defenders - Missile Mayhem on AWS - Frontend Game",
  "main": "index.html",
  "type": "commonjs",
  "scripts": {
    "dev": "http-server . -p 3000 -c-1",
    "build": "echo 'Build process for production'",
    "test": "jest",
    "lint": "eslint js/**/*.js __tests__/**/*.js",
    "lint:fix": "eslint js/**/*.js __tests__/**/*.js --fix",
    "lint:check": "eslint js/**/*.js __tests__/**/*.js",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "format": "prettier --write \"js/**/*.js\" \"__tests__/**/*.js\" \"*.html\"",
    "format:check": "prettier --check \"js/**/*.js\" \"__tests__/**/*.js\" \"*.html\"",
    "check": "npm run lint:check && npm run security && npm test"
  },
  "keywords": [
    "game",
    "aws",
    "tower-defence",
    "html5-canvas"
  ],
  "author": "Cloud Defenders Team",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "http-server": "^14.1.1",
    "jest": "^30.0.0",
    "prettier": "^3.0.0"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js"
    ]
  }
}
